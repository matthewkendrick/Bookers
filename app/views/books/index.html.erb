<%# 一覧画面 %>
<% if flash[:notice] %>
  <div class="index-flash">
    <div class="duccessfully">
      <%= flash[:notice] %>
    </div>
  </div>
<% end %>
<section class="section-books">
  <h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
          <td><%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<%# 新規投稿フォーム %>
<section class="section-new-book">
  <h2>New Book</h2>
  <%= form_with model: @book, class: :'new_book', id: :'new_book', local:true do |f| %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= @book.errors.count %>errors prohibited this product from being saved:</h2>
        <ul>
          <% @book.errors.full_message.each do |message|%>
            <li><%= message %></li> 
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="title-form">
        <h4>Title</h4>
        <%= f.text_field :title, class: 'book_title' %>
    </div>
    <div class="body-form">
        <h4>Body</h4>
        <%= f.text_area :body, class: 'book_body' %>
    </div>
    <%= f.submit 'Create a Book' %>
  <% end %>
</section>

    
<footer></footer>