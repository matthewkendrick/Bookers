<%# 編集画面 %>
<section>
  <h1>Editing Book</h1>
  <%# エラーメッセージを表示させる %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li> 
        <% end %>
      </ul>
    </div>
  <% end %>

<%# 編集フォーム %>
  <%= form_with model:@book, local:true do |f| %>
    <div class="form-title">
      <h4>Title</h4>
      <%= f.text_field :title, class: 'book_title' %>
    </div>
    <div class="form-body">
      <h4>Body</h4>
      <%= f.text_area :body, class: 'book_body', size: "40x10" %>
    </div>
    <div class="action">
        <%= f.submit 'Update Book' %>
    </div>
  <% end %>
  
<%# 画面遷移 %>
  <%= link_to "Show", book_path(@book), class: (@book.id) %>
  | 
  <%= link_to "Back", books_path, class: 'back' %>
</section>

